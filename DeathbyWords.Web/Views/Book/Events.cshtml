@using DeathByWords.Core.Models
@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="siteHeading">Events</h2>

@*@foreach (Book book in ViewBag.ListofBooks)
